# =============================================
# Backend Production Environment Variables
# =============================================

# JWT Authentication
JWT_SECRET=REEMPLAZA_CON_UNA_CLAVE_SEGURA
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Credentials Encryption
CREDENTIALS_ENCRYPTION_KEY=REEMPLAZA_CON_FERNET_KEY

# AI Configuration
AI_LLM_MODE=stub

# Database Configuration
# Railway automatically injects DATABASE_URL for PostgreSQL service
DATABASE_URL=${{postgresql.DATABASE_URL}}

# API Configuration
API_BASE_URL=https://TU-DOMINIO/api
BACKEND_CORS_ORIGINS=["https://TU-DOMINIO","http://localhost:3000"]

# OpenAI (opcional - solo si quieres usar OpenAI)
OPENAI_API_KEY=
AI_OPENAI_MODEL_NAME=gpt-4

# Gemini (opcional - solo si quieres usar Gemini)
GEMINI_API_KEY=
AI_GEMINI_MODEL_NAME=gemini-2.0-flash-exp

# AI Worker
AI_WORKER_ENABLED=true
AI_WORKER_INTERVAL_SECONDS=30

# Orchestrator
ORCHESTRATOR_ENABLED=true
ORCHESTRATOR_INTERVAL_SECONDS=2

# Publishing
PUBLISHING_STUB_MODE=true
PUBLISHING_PROVIDER_TIMEOUT_SECONDS=30

# Scheduler
SCHEDULER_TICK_INTERVAL_SECONDS=60

# Telemetry
TELEMETRY_INTERVAL_SECONDS=3
ALERT_SCAN_INTERVAL_SECONDS=60

# Environment
ENVIRONMENT=production
LOG_LEVEL=info
TZ=UTC
