# =============================================
# Backend Production Environment (Railway)
# =============================================
# This file contains production values
# Copy to Railway environment variables

# =============================================
# Database (Railway PostgreSQL Plugin)
# =============================================
# Railway automatically provides DATABASE_URL
# Format: postgresql://user:pass@host:port/dbname
# No need to set manually - Railway injects this

# =============================================
# Security (CRITICAL - Generate new values)
# =============================================
SECRET_KEY=${SECRET_KEY}
CREDENTIALS_ENCRYPTION_KEY=${CREDENTIALS_ENCRYPTION_KEY}

# =============================================
# Application Settings
# =============================================
PYTHONUNBUFFERED=1
DEBUG_ENDPOINTS_ENABLED=false

# =============================================
# Workers
# =============================================
WORKER_ENABLED=true
WORKER_POLL_INTERVAL=2
MAX_JOB_RETRIES=3

# =============================================
# AI Configuration (stub mode by default)
# =============================================
AI_LLM_MODE=stub
AI_WORKER_ENABLED=false
AI_WORKER_INTERVAL_SECONDS=60

# =============================================
# AI API Keys (Optional - only if AI_LLM_MODE=live)
# =============================================
OPENAI_API_KEY=${OPENAI_API_KEY:-}
GEMINI_API_KEY=${GEMINI_API_KEY:-}

# =============================================
# Social Media Platforms (Optional)
# =============================================
INSTAGRAM_APP_ID=${INSTAGRAM_APP_ID:-}
INSTAGRAM_APP_SECRET=${INSTAGRAM_APP_SECRET:-}
TIKTOK_CLIENT_KEY=${TIKTOK_CLIENT_KEY:-}
TIKTOK_CLIENT_SECRET=${TIKTOK_CLIENT_SECRET:-}
YOUTUBE_CLIENT_ID=${YOUTUBE_CLIENT_ID:-}
YOUTUBE_CLIENT_SECRET=${YOUTUBE_CLIENT_SECRET:-}

# =============================================
# Storage
# =============================================
VIDEO_STORAGE_DIR=/app/storage/videos

# =============================================
# Telemetry
# =============================================
TELEMETRY_INTERVAL_SECONDS=5

# =============================================
# CORS (Railway domains)
# =============================================
BACKEND_CORS_ORIGINS=["https://stakazo-dashboard.up.railway.app","https://stakazo.up.railway.app"]
