# =============================================
# Stakazo Production Environment Variables
# =============================================
# Copy this file to .env and fill with real values
# NEVER commit .env file with real credentials

# =============================================
# PostgreSQL Database
# =============================================
POSTGRES_DB=stakazo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD  # REQUIRED: Change in production

# =============================================
# Backend Security (CRITICAL)
# =============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY  # REQUIRED: 32+ bytes random

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIALS_ENCRYPTION_KEY=CHANGE_ME_FERNET_KEY  # REQUIRED: Fernet key for encrypting platform credentials

# =============================================
# Backend Configuration
# =============================================
# Workers
WORKER_ENABLED=true
WORKER_POLL_INTERVAL=2
MAX_JOB_RETRIES=3

# AI Configuration (default: stub mode, no real API calls)
AI_LLM_MODE=stub
AI_WORKER_ENABLED=false
AI_WORKER_INTERVAL_SECONDS=60

# Telemetry
TELEMETRY_INTERVAL_SECONDS=5

# =============================================
# AI API Keys (OPTIONAL - only if AI_LLM_MODE=live)
# =============================================
# OpenAI (GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# =============================================
# Social Media Platform Credentials (OPTIONAL)
# Only needed if publishing to real platforms
# =============================================
# Instagram
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# TikTok
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# YouTube
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# =============================================
# Dashboard Configuration
# =============================================
# API Base URL (external URL that browsers will use)
NEXT_PUBLIC_API_BASE_URL=https://api.your-domain.com/api

# NextAuth (for dashboard authentication)
NEXTAUTH_URL=https://app.your-domain.com
NEXTAUTH_SECRET=CHANGE_ME_NEXTAUTH_SECRET  # Generate with: openssl rand -base64 32

# =============================================
# Nginx Configuration
# =============================================
HTTP_PORT=80
HTTPS_PORT=443
