{
  "policy_id": "YT_BREAKOUT_SUPPORT_v1.3",
  "name": "YouTube Breakout Support",
  "description": "Support videos that are near breakout threshold with strategic engagement",
  "scope": "youtube_video",
  "applicable_states": [
    "organic_lift",
    "near_breakout"
  ],
  "conditions": [
    {
      "field": "comments_to_breakout",
      "operator": "<=",
      "value": 5,
      "weight": 1.5
    },
    {
      "field": "retention_ratio",
      "operator": ">",
      "value": 1.1,
      "weight": 1.2
    },
    {
      "field": "identity_risk",
      "operator": "<",
      "value": 0.4,
      "weight": 1.0
    },
    {
      "field": "aggressiveness_score",
      "operator": "<",
      "value": 0.7,
      "weight": 1.0
    }
  ],
  "actions": [
    {
      "action_type": "comment_reply",
      "max_executions": 2,
      "cooldown_minutes": [
        45,
        180
      ],
      "parameters": {
        "authenticity": "high",
        "context_aware": true
      }
    },
    {
      "action_type": "contextual_boost",
      "max_executions": 1,
      "cooldown_minutes": [
        120,
        240
      ],
      "parameters": {
        "boost_type": "organic_amplification"
      }
    }
  ],
  "success_signals": [
    "velocity_increase",
    "breakout_achieved",
    "engagement_rate_up"
  ],
  "abort_conditions": [
    "risk_spike",
    "pattern_similarity_high",
    "identity_risk_high",
    "shadowban_detected"
  ],
  "confidence_weight": 0.82,
  "status": "active",
  "metadata": {
    "created_at": "2025-12-12T17:08:13.629673",
    "created_by": "PolicyDesigner",
    "version": "1.3",
    "previous_version": "1.2",
    "change_notes": "Increased retention_ratio threshold to 1.1",
    "tags": [
      "youtube",
      "breakout",
      "engagement"
    ],
    "a_b_test_group": null
  },
  "max_total_actions": 3,
  "global_cooldown_minutes": 45,
  "expiry_date": null,
  "requires_risk_simulation": true,
  "requires_supervisor_approval": false,
  "max_allowed_risk_score": 0.5,
  "max_allowed_aggressiveness": 0.7
}